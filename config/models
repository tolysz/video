Users
    uuid          Text default=gen_random_uuid()
    name          Text Maybe
    friendly      Text Maybe
    avatar        Text Maybe
    deleted       Bool default=false
    UniqueUsers   uuid
    deriving Show Typeable Generic

Email
    email         Text
    userId        UsersId
    UniqueEmail   email
    deriving Show Typeable Generic

SiteAdmin
    userId          UsersId
    isAdmin         Bool
    UniqueSiteAdmin userId
    deriving Show Typeable Generic

UserTheme
    userId          UsersId
    theme           (TC Theme) Maybe
    UniqueUserTheme userId
    deriving Show Typeable Generic

OAuthAccess
    owner         UsersId
    groupId       SiteGroupId
    realm         Text
    identity      Text Maybe
    accessToken   Text Maybe
    expires       UTCTime Maybe
    refreshToken  Text Maybe
    tokenType     Text Maybe
    scope         Texts
    -- OnePerRealm   owner group
    UniqueOAuthAccess owner groupId
    deriving Show Typeable Generic

-- Let start the other end
SiteGroupMember
  groupId       SiteGroupId
  userId        UsersId
  fullMember    Bool
  userAdmin     Bool
  videoAdmin    Bool
  UniqueSiteGroupMember groupId userId
  deriving Show Typeable Generic

SiteGroup
  uuid            Text
  public          Bool
  name            Text
  short           ShortName
  notes           Text Maybe
  url             Text Maybe
  UniqueSiteGroup uuid
  deriving Show Typeable Generic


